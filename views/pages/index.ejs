      </div>
    </div>

    <div id="album" class="tab-pane fade">
      <div class="panel-header">
        <button type="button" class="close" onclick="backToGallery()">&times;</button>
        <h4><span class="capitalize" id="album-title">Titolo dell'album</span>, <span class="glyphicon glyphicon-user"></span> <a id="album-author"></a></h4>
      </div>

      <div id="album-content" class="panel-body">Contenuto dell'album</div>

      <div class="panel-footer">
        <button type="button" class="btn btn-default" onclick="backToGallery()">Close album</button>
      </div>
    </div>

    <div id="gallery" class="tab-pane fade in active">
      <p>Galleria</p>
    </div>
  </div>
</div>

<script type="text/javascript" src="/photo.js"></script>
<script type="text/javascript" src="/album.js"></script>
